<!DOCTYPE html>
<html>

<head>
    <title>ERMIS - {{ antl.forLocale(lang).formatMessage('index.technology_solutions') }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        html {
            font-size: 14px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <link href="{{ link('addon/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ link('addon/css/site.css') }}" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.common-material.min.css') }}" />
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.material.min.css') }}" />
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.material.mobile.min.css') }}" />

    <script src="{{ link('library/kendoui/js/jquery.min.js') }}"></script>
    <script src="{{ link('library/kendoui/js/kendo.all.min.js') }}"></script>
    <script src="{{ link('library/kendoui/js/jszip.min.js') }}"></script>
</head>

<body>
    <div class="container-fluid">
        <!--open container-->
        <div class="row row-offcanvas row-offcanvas-left">
            <div id="main-section" class="col-xs-12 column">
                <div id="main-section-header" class="row">
                    <a href="{{ link('/') }}"><img id="team-efficiency" class="col-xs-3" src="{{ link('images/logo-big-blue.png') }}" alt="Ermis" />  </a>
                    <div id="dateFilter" class="col-md-9">
                        <label for="language">{{ antl.forLocale(lang).formatMessage('index.choose_language') }}</label>
                        <select id="language">
                          <option value="?lang=en" {{shortif(lang == 'en',"selected","")}} >English</option>
                          <option value="?lang=vn" {{shortif(lang == 'vn',"selected","")}}  >Vietnamese</option>
                        </select>
                    </div>
                    <div style="clear:both;"></div>
                </div>

                <div class="main-section-content row" style="">

                    <div id="solution-list" class="col col-xs-2">
                        <h3>{{ antl.forLocale(lang).formatMessage('index.solution') }}</h3>
                        <div id="solutions-list">
                            <div class="solution-wrapper">
                                <a href="{{ link('acc/index') }}">
                                    <img src="{{ link('images/ermis-acc-logo.png') }}" class="img-responsive solution-list-image">
                                    <dl class="solution-list-details">
                                        <p class="name">ERMIS ACC </p>
                                        <p class="title">{{ antl.forLocale(lang).formatMessage('index.software_accounting') }} </p>
                                    </dl>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div id="solution-details-wrapper" class="col col-xs-10">
                        <div id="solution-details" class="row">
                            <div id="tabstrip">
                                <ul>
                                    <li class="k-state-active">
                                        {{ antl.forLocale(lang).formatMessage('index.accounting_software_features') }}
                                    </li>
                                </ul>
                                <div>
                                    <p> {{ antl.forLocale(lang).formatMessage('index.not_update') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--close main column-->
        </div>
        <!--close row-->
    </div>
    <!--close container-->
    <script src="{{ link('addon/scripts/index.js') }}"></script>
</body>

</html>
