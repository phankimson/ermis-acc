<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập hệ thống Ermis</title>
    <meta name="csrf_token" content="{{ csrfToken }}"/>
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.common.min.css') }}" />
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.material.min.css') }}" />
    <link rel="stylesheet" href="{{ link('library/kendoui/styles/kendo.default.mobile.min.css') }}" />
    <link rel="stylesheet" href="{{ assets('css/customize.css') }}" />
    <link rel="stylesheet" href="{{ assets('css/login.css') }}" />
    <script src="{{ link('library/kendoui/js/jquery.min.js') }}"></script>
    <script src="{{ link('library/kendoui/js/kendo.all.min.js') }}"></script>
    <!-- Generate script tag. -->
  {{{ recaptcha.script }}}
</head>
<body>
    <div class="logo">
        <a href="/">
            <img src="{{ link('images/logo-big-blue.png') }}" alt="Epos" />
        </a>
    </div>
    <!-- END LOGO -->
    <h3 class="form-title font-green">{{ antl.forLocale(lang).get('global.login') }}</h3>
    <div id="login-form">
        <div class="login-section k-content">
            <ul class="fieldlist login-form">
                <li>
                <div id="notification"></div>
                </li>
                <li>
                    <label for="icon-right">{{ antl.forLocale(lang).get('global.username') }}</label>
                    <span class="k-textbox k-space-right" style="width: 100%;">
                        <input type="text" class="icon-right" name="username" placeholder="{{ antl.forLocale(lang).get('global.username') }}" />
                        <a href="javascript:;" class="k-icon k-i-user" >&nbsp;</a>
                    </span>
                </li>
                <li>
                    <label for="icon-right">{{ antl.forLocale(lang).get('global.password') }}</label>
                    <span class="k-textbox k-space-right" style="width: 100%;">
                        <input type="password" class="icon-right" name="password" placeholder="{{ antl.forLocale(lang).get('global.password') }}"/>
                        <a href="javascript:;" class="k-icon k-i-password" >&nbsp;</a>
                    </span>
                </li>
                <li>
                  <!-- Generate recaptcha field -->
                    {{{ recaptcha.field  }}}
                </li>
                <li>
                    <a id="button_login" href="javascript:;" class="k-button k-primary">{{ antl.forLocale(lang).get('global.signin') }}</a>
                   <!-- <a id="button_login" href="javascript:;" class="k-button k-alert">Đăng ký</a>-->
                </li>

            </ul>

        </div>
    </div>
    <script>
          jQuery(document).ready(function () {
              var headers = {
                 'x-csrf-token' : jQuery('meta[name="csrf_token"]').attr('content')
             }
             jQuery.ajaxSetup({ headers: headers})
          });
    </script>
    <script src="{{ link('addon/scripts/ermis_template.js') }}"></script>
    <script src="{{ link('addon/scripts/framework.js') }}"></script>
    <script src="{{ link('addon/scripts/global/login.js') }}"></script>
</body>
</html>
